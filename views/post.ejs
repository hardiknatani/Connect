<li>
    <p class="post">
        <span><%=post.user.name%></span>
        <!-- <br> -->
      <small><%=post.content%>
        <%if (locals.user && locals.user.id==post.user.id){%>
       
            <a href="/posts/destroy/<%=post.id%>"><img src="/images//delete-icon.png" alt="" srcset=""></a>
    
        <%}%>
    </small>

  
    </p>
    <div class="create-comment">
        <%if (locals.user){%>
            <form action="/comments/createComment" method="POST">
                <input type="text" name="content" id="" placeholder="Type comment" required>
                <input type="hidden" name="post" value="<%=post.id%>">
                <input type="submit" id="comment-btn" value="Add Comment">
            </form>
            <%}%>
    </div>
    <div class="post-comments-list">
        <ul id="post-comments-<%=post.id%>"   ></ul>
        <% for ( comment of post.comments){%>
          
    <%-include('comment')-%>

            <%}%>
    </div>
</li>